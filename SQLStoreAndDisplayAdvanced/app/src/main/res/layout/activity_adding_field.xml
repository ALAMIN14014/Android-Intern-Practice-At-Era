<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingFieldActivity">
    
    <TextView
        android:id="@+id/display_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Person Information"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        />
    
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/person_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/display_text"
        android:padding="2dp"
        android:src="@drawable/ic_action_add_photo"
        />
    
    <EditText
        android:background="@drawable/background"
        android:id="@+id/person_name"
        android:hint="Enter your name"
        android:textSize="30sp"
        android:inputType="textPersonName|textCapWords"
        android:layout_below="@+id/person_image"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@drawable/background"
        android:id="@+id/person_age"
        android:hint="Enter your age"
        android:textSize="30sp"
        android:inputType="number"
        android:layout_below="@+id/person_name"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@drawable/background"
        android:id="@+id/person_phone"
        android:hint="Enter your phone"
        android:textSize="30sp"
        android:inputType="number"
        android:layout_below="@+id/person_age"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"/>
    
    <Button
        android:id="@+id/save_info_btn"
        android:background="@drawable/background"
        android:layout_marginTop="16dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/person_phone"
        android:text="Save Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>